@model CrudAsp.DTO.ContactoDTO
@{
    ViewData["Title"] = "Editar Contactos";
}
<h3><strong>Editar Contactos</strong></h3>
<form asp-action="Actualizar">
    <h1> Contacto </h1>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Telefono" for="nombres">Nombres</label>
            <input asp-for="Nombre" type="text" class="form-control" id="nombres" placeholder="Nombres" required>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Telefono" for="Telefono">Telefono</label>
            <input asp-for="Telefono" maxlength="10" type="tel" class="form-control" id="Telefono" placeholder="Telefono" required>
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Correo" for="Correo">Correo</label>
            <input asp-for="Correo" type="email" class="form-control" id="Correo" placeholder="Correo" required>
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>
    </div>
    <div style="display:flex; margin-top:1rem ">
        <button type="submit" class="btn btn-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"></path>
            </svg>
            Editar
        </button>
        <a asp-asp-controller="Home" asp-action="Index">
            <button style="margin-left: 5rem" type="button" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"></path>
                </svg>
                Cancelar
            </button>
        </a>
    </div>

</form>

