@model CrudAsp.DTO.ContactoDTO
 
@{
    ViewData["Title"] = "Lista de Contactos";
    
}     
    <form asp-action="Crear">
    <h1> Contacto </h1>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-row">
    <div class="form-group col-md-6">
    <label asp-for="Telefono" for="nombres">Nombres</label>
    <input asp-for="Nombre" type="text" class="form-control" id="nombres" placeholder="Nombres" required>
    <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
    <label asp-for="Telefono" for="inputPassword4">Telefono</label>
    <input asp-for="Telefono" maxlength="10" type="tel" class="form-control" id="inputPassword4" placeholder="Telefono" required>
    <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
    <label asp-for="Correo" for="inputAddress">Correo</label>
    <input asp-for="Correo" type="email" class="form-control" id="inputAddress" placeholder="Correo" required>
    <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
        <div class="form-group col-md-6">
            <label asp-for="IdCargo">Cargo</label>
            <select asp-for="IdCargo" class="form-control" required>
                <option value="">Seleccionar Cargo</option>
                @foreach (var cargo in ViewBag.Cargos)
                {
                    <option value="@cargo.Value">@cargo.Text</option>
                }
            </select>
            <span asp-validation-for="IdCargo" class="text-danger"></span>
        </div>

    </div>
    <div style="display:flex; margin-top:1rem ">
    <button type="submit" class="btn btn-success">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
    <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"></path>
    <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5"></path>
    </svg>
    Crear
    </button>
    <a asp-asp-controller="Home" asp-action="Index">
    <button style="margin-left: 5rem" type="button" class="btn btn-primary">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"></path>
    </svg>
    Cancelar
    </button>
    </a>
    </div>
    </form>
